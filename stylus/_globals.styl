
/*************\
*   Colors
*************/
$color-primary = #2d132c
$color-secondary = #c72c41
$color-bg = #715670
$color-bg-light = #b79eb6
$color-black = #160104
$color-white = #dbdbdb
$color-gray = #615960
$color-gray-light = #a79da6
/*************\
*   Fonts
*************/
$font-normal = "Open Sans", sans-serif
$font-titles = "Roboto", sans-serif
$font-size-h1 = 28px
$font-size-h2 = 24px
$font-size-h3 = 20px
$font-size-p = 14px
$font-size-small = 12px
/*************\
*   Box sizes
*************/
$padding = 20px
$max-width-mobile = 360px

html
  font-size: 62.5%

body
  font-family: $font-normal
  background-color $color-secondary

h1,h2,h3
  font-family $font-titles
h1
  font-size $font-size-h1
h2
  font-size $font-size-h2
h3
  font-size $font-size-h3
p
  font-size $font-size-p
small
  font-size $font-size-small
ul,
body,
li,
figure
  margin: 0
  padding: 0

a
  text-decoration: none
  color: inherit
p
  line-height 1.5rem

[data-prefix="fas"], [data-prefix="fab"]
  color $color-white
  // font-size 2.5rem

button
 background none
 border none
 appearance none
 padding 0
 
.img
 width 100%

.section-title
  margin-top 0
