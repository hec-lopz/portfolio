.input-group 
  display flex
  flex-direction column
  font-size $font-size-p
  &__label
    font-size $font-size-p
  &__input
    background-color $color-white
    border none
    border-radius 10px
    padding 5px 10px
    font-size inherit
    color $color-black
    &--text-area
      // max-width 360px
      resize none
      @media(min-width:1280px)
        height 85px
  &__label + &__input
    margin-top 10px
  & + & 
