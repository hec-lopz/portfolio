.hero
  // max-width 320px
  height calc(100vh - 96px)
  min-height 55rem
  margin auto
  background-color $color-secondary
  padding $padding
  color $color-white
  display flex
  // flex-direction column
  justify-content  center
  @media(min-width:768px)
    align-items center
    min-height 80rem
  @media(min-width:1024px)
    min-height 90rem
  &__container
    padding 0
    @media(min-width:768px)
      max-width 450px
      margin-top -100px
  
  &__photo
    width 150px
    height @width
    overflow hidden
    border-radius 50%
    margin 0 auto
    @media(min-width:768px)
      width 350px
      height @width
    @media(min-width:1024px)
      width 460px
      height @width

    // @media screen and (min-width: 768px)
    //   width 250px
    //   height @width
  &__img
    object-position right
    object-fit cover

  &__about-me
    display flex
    align-items  center
    // justify-content space-between
    flex-direction column
    height 80%
    @media(min-width:768px)
      padding-top 20px
    
  &__name
    font-size 2.8rem
    text-align center
    margin 10px 0
    display flex
    flex-direction column
    @media(min-width:768px)
      // display block
  &__description
    margin 10px 0
    font-size 14px
    text-align justify
  &__social-media
    // margin-top $box-margin
    @media(min-width:768px)
      margin-top 30px
    @media(min-width:1024px)
      // margin-top 50px
  &__link
    font-size 3rem
    & + &
      margin-left $box-margin