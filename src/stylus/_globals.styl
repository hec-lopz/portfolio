
/*************\
*   Colors
*************/
$color-primary = #2d132c
$color-primary-hover = #4A2E49
$color-btn = #EBDAEA

$color-secondary = #c72c41
$color-secondary-hover = #E6838F
$color-bg = #715670
$color-bg-light = #b79eb6
$color-black = #160104
$color-white = #F8F8FF
$color-gray = #EAEAEA
$color-gray-light = #a79da6

$outline-shadow = 0 0 .5em 0.01em $color-secondary
/*************\
*   Fonts
*************/
$font-normal = "Montserrat", sans-serif
$font-titles = "Raleway", sans-serif
$font-size-h1 = 2.7rem
$font-size-h2 = 2.4rem
$font-size-h3 = 2rem
$font-size-p = 1.6rem
$font-size-actions = 1.8rem
$font-size-small = 1.2rem
/*************\
*   Box sizes
*************/
$padding = 20px
$max-width-mobile = 360px
$border-radius = 10px
$box-margin = 10px



html
  font-size: 62.5%
  scroll-behavior smooth
  box-sizing border-box
*, *:after, *:before
  box-sizing border-box

body
  font-family: $font-normal
  background-color $color-gray
  color $color-primary
  // overflow hidden

h1,h2,h3
  font-family $font-titles
h1
  font-size $font-size-h1
  letter-spacing .01em
h2
  font-size $font-size-h2
  letter-spacing .015em

h3
  letter-spacing .015em
  font-size $font-size-h3
p
  font-size $font-size-p
  letter-spacing .015em
  line-height 2.2rem
  margin 0
p + p
  margin 1.6rem 0
small
  font-size $font-size-small
  letter-spacing .015em
ul,
li,
figure
  margin: 0
  padding: 0

ul
  list-style none
em
  font-style normal
a
  text-decoration: none
  color: inherit
  font-size inherit
input
  border none
  
input:focus, input:focus-visible, textarea:focus, textareainput:focus-visible
  outline 0
  box-shadow $outline-shadow
  

[data-prefix="fas"], [data-prefix="fab"]
  color inherit
  // font-size 2.5rem

button
 background none
 border none
 appearance none
 padding 0
 
.img
 width 100%
 height 100%

.section-title
  margin-top 0
  color $color-secondary
  margin-bottom 5rem

.button
  display flex
  justify-content center
  align-items center
  width 100%
  height 40px
  background-color $color-secondary
  color $color-white
  border-radius $border-radius
  font-size $font-size-p
  letter-spacing .1em
  // font-family $font-titles
  font-weight thin
  text-transform capitalize
  cursor pointer
  transition background-color ease-in 150ms, color ease-in 150ms
  outline 0
  &:hover
    background-color $color-secondary-hover
    color $color-primary-hover
  &:focus-visible
    box-shadow 0 0 0 .1rem $color-white, 0 0 .5rem .3rem $color-secondary

.container
  // max-width $max-width-mobile
  margin 0 auto
  padding 0 $padding
  // width 100%
  @media(min-width: 1280px)
    padding 0
    // max-width 1100px
    width: 90%
    max-width 1420px
