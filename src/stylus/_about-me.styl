.about-me
  padding  5rem 0
  @media screen and (min-width: 1280px)
    padding 15rem 0 0
  &__content
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    @media screen and (min-width: 956px)
      justify-content space-between
  &__copy
    flex-grow 2
    max-width 80rem
    flex-basis 66%
    margin-bottom 2rem
    @media screen and (min-width: 956px)
      margin-bottom 0
      margin-right  2rem
      flex-basis 50%

  &__photo
    max-width 28.5rem
    max-height 32.8rem
    // width 28.5rem
    flex-grow 0
    flex-shrink 0
    border-radius 10px
    overflow hidden
    box-shadow: 0px 0px 15px 2px alpha($color-black, .45);
    & .img
      object-fit cover
    // flex-basis 28.5rem
    @media screen and (min-width:768px)
      max-width 31rem
      max-height 39.3rem

    @media screen and (min-width:1280px)
      max-width 43.4rem
      max-height 55rem
