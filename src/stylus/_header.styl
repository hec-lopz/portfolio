.header
  position sticky
  z-index 10
  top 0
  background-color $color-gray
  // width 100vw
  box-shadow: 0px 5px 16px -10px $color-black;
  
  @media(min-width:1280px)
    padding 0
    width unset
  &__container
    display flex
    justify-content space-between 
    align-items center
    padding-top 1.5rem
    padding-bottom 1.5rem
    // cursor pointer
    // max-width unset
    @media(min-width:1280px)
      // max-width 1100px
      margin auto
      padding 2rem 0


  

  &__logo
    width 4.4rem
    overflow: hidden
    &:focus-visible
      outline .2rem solid $color-secondary

    @media(min-width:1280px)
      width auto
    & svg
      width 12.5rem

  &__img
    width 100%

  &__nav
    background-color $color-gray
    box-shadow: 0px 10px 16px -10px $color-black;
    display flex
    justify-content flex-end
    position absolute
    left -2rem
    right -2rem
    bottom -149.3px
    padding 2rem 4rem
    transform scaleY(0)
    transform-origin top center

    @media(min-width 1280px)
      position static
      transform scaleY(1)
      flex-direction row
      padding 0
      background-color unset


    &--open
      transform scaleY(1)


  &__btns-container
    text-align right
    display inline-flex
    flex-direction column
    font-size $font-size-actions
    color $color-secondary
    font-weight bold
    align-items space-between
    @media(min-width 1280px)
      flex-direction row


  
  &__btn
    position relative
    a
      padding .5rem 0
      // outline 0
    @media screen and (min-width 1200px)
      & a::after
        content ""
        display inline-block
        // width 80%
        position absolute
        // top 0
        right .5rem
        left .5rem
        bottom -.5rem
        border .1rem solid $color-secondary
        transform scale(0)
        transform-origin center
        transition 250ms transform ease-in-out
      & a:hover::after, & a:focus::after
        transform scale(1)
      & a:focus-visible
        outline .2rem solid $color-secondary
      




  &__btn + &__btn
    margin-top 10px
    @media(min-width 1280px)
      margin-top 0
      margin-left 40px


