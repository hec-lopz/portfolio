.mobile-btn
  padding 2rem 1rem
  display flex
  align-items center
  justify-content center
  cursor pointer
  @media(min-width 1280px)
    display none
  &--scrolled
    background $color-primary
  &.menu-btn--open
    // background $color-primary
    background transparent
  &:focus
    outline none
    border 1px dotted


  
